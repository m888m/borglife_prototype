# Test Environment Configuration
# This file contains environment variables for testing

# Test Environment Flags
TEST_ENVIRONMENT=true
TEST_SCOPE=unit
MOCK_LEVEL=full
TEST_TIMEOUT_MULTIPLIER=1.0

# Service URLs (for local development)
ARCHON_SERVER_URL=http://localhost:8181
ARCHON_MCP_URL=http://localhost:8051
ARCHON_AGENTS_URL=http://localhost:8052

# Database Configuration (SQLite for testing)
DATABASE_URL=sqlite:///:memory:
DB_TYPE=sqlite

# Cache Configuration (in-memory for testing)
CACHE_TYPE=memory
REDIS_HOST=localhost
REDIS_PORT=6379

# External Service Mocks
MOCK_EXTERNAL_SERVICES=true
MOCK_JAM_INTERFACE=true
MOCK_DOCKER_SERVICES=true

# Test Data Configuration
TEST_DATA_DIR=tests/fixtures
TEST_DNA_SAMPLES=test_dna.yaml
DEMO_TASKS=demo_tasks.json
EXPECTED_RESULTS=expected_results.json

# Logging Configuration
LOG_LEVEL=WARNING
TEST_LOG_LEVEL=INFO
LOG_TO_FILE=false

# Performance Settings
TEST_EXECUTION_TIMEOUT=300
ASYNC_TEST_TIMEOUT=60
NETWORK_TEST_TIMEOUT=30

# Resource Limits
MAX_TEST_WORKERS=4
MAX_MEMORY_USAGE=512MB
MAX_DISK_USAGE=1GB

# Integration Test Settings
ENABLE_INTEGRATION_TESTS=true
ENABLE_E2E_TESTS=true
SKIP_SLOW_TESTS=false

# Health Check Configuration
HEALTH_CHECK_INTERVAL=5
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# Mock Service Configuration
MOCK_FAILURE_RATE=0.0
MOCK_LATENCY_MS=10
MOCK_RESPONSE_VARIATION=true