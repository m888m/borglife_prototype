# BorgLife Phase 1 End-to-End Test Environment Configuration
# This file contains test-specific environment variables for E2E testing

# Test Configuration
E2E_TEST_TIMEOUT=300
E2E_TEST_PARALLEL=false
E2E_TEST_MODE=local

# Service Endpoints (for testing)
ARCHON_SERVER_URL=http://localhost:8181
ARCHON_MCP_URL=http://localhost:8051
ARCHON_AGENTS_URL=http://localhost:8052

# Supabase Configuration (inherited from main .env)
SUPABASE_URL=http://localhost:8000
SUPABASE_SERVICE_KEY=test-service-key

# Test Database Configuration
TEST_DATABASE_URL=postgresql://test:test@localhost:5433/test_db
TEST_REDIS_URL=redis://localhost:6380/1

# Logging Configuration
LOG_LEVEL=INFO
TEST_LOG_LEVEL=DEBUG

# Performance Testing
PERFORMANCE_TEST_ENABLED=true
PERFORMANCE_BASELINE_FILE=tests/baselines/performance.json

# Circuit Breaker Configuration (for testing)
CIRCUIT_BREAKER_ENABLED=true
CIRCUIT_BREAKER_FAILURE_THRESHOLD=3
CIRCUIT_BREAKER_RECOVERY_TIMEOUT=30

# Async Initialization Settings
ASYNC_INIT_TIMEOUT=60
SERVICE_STARTUP_TIMEOUT=120

# Economic Model Testing
ECONOMIC_ACCURACY_TOLERANCE=0.001
DECIMAL_PRECISION=6

# DNA Integrity Testing
DNA_HASH_ALGORITHM=sha256
YAML_CANONICAL_SERIALIZATION=true

# Demo Scenario Configuration
DEMO_FUNDING_AMOUNT=0.1
DEMO_EXECUTION_TIMEOUT=300
DEMO_SCENARIO_COUNT=5

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

# MCP Testing Configuration
MCP_TEST_ENABLED=true
MCP_CONNECTION_TIMEOUT=30
MCP_REQUEST_TIMEOUT=60

# Docker Service Configuration
DOCKER_COMPOSE_FILE=docker-compose.yml
DOCKER_TEST_PROFILE=test

# Test Data Configuration
TEST_FIXTURES_PATH=tests/fixtures
TEST_RESULTS_PATH=tests/results
TEST_BASELINES_PATH=tests/baselines

# Validation Configuration
VALIDATION_STRICT_MODE=true
VALIDATION_SCHEMA_PATH=tests/schemas
VALIDATION_REPORT_FORMAT=json

# Cleanup Configuration
TEST_CLEANUP_ENABLED=true
TEST_CLEANUP_TIMEOUT=30
TEST_ISOLATION_LEVEL=function