# Westend RPC Configuration - FINAL WORKING SOLUTION
WESTEND_RPC_URL=https://westend.api.onfinality.io/public
WESTEND_SS58_FORMAT=42
WESTEND_TYPE_REGISTRY=westend

# Connection Method: HTTP POST
# SSL: Compatible with LibreSSL 2.8.3
# Status: âœ… FULLY WORKING
# Provider: OnFinality (reliable, fast)

# Usage Example:
import requests

class WestendRPCClient:
    def __init__(self, endpoint='https://westend.api.onfinality.io/public'):
        self.endpoint = endpoint
        self.session = requests.Session()
    
    def rpc_call(self, method, params=None, id=1):
        payload = {
            'jsonrpc': '2.0',
            'method': method,
            'params': params or [],
            'id': id
        }
        response = self.session.post(
            self.endpoint,
            json=payload,
            headers={'Content-Type': 'application/json'},
            timeout=15
        )
        return response.json()

# For production dispenser operations:
from security.secure_dispenser import SecureDispenser

